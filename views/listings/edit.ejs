<div class="row">
  <div class="col-8 offset-2">
    <% layout("/layouts/boilerplate")%>
    <body>
        <br>
      <h3>Edit your Listings</h3>
      <form action="/listings/<%= listing._id %>/edit" method="post" enctype="multipart/form-data" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="title" class="form-label"></label>
          <input
            type="text"
            name="title"
            value="<%= listing.title %>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Image Link/URL should be required</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label"></label>
          <textarea
            type="text"
            name="description"
            class="form-control"
            required
          ><%= listing.description %></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Description should be short</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label"></label>
          <input
            type="file"
            name="image"
            class="form-control"
          />
          <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Image link should be valid</div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
          <label for="price" class="form-label"></label>
          <input
            type="number"
            name="price"
            value="<%= listing.price %>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Price should be valid</div>
        </div>

        <div class="mb-3 col-8">
          <label for="location" class="form-label"></label>
          <input
            type="text"
            name="location"
            value="<%= listing.location %>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Price should be valid</div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label"></label>
          <input
            type="text"
            name="country"
            value="<%= listing.country %>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
        <button class="btn btn-dark form-btn">Edit</button>
      </form>
      <br />
    </body>
  </div>
</div>
<script src="/js/script.js"></script>