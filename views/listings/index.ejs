<% layout('layouts/boilerplate') %>

<style>
  #filter {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 1;
    cursor: pointer;
  }
  .tax-info{
    display: none;
  }
  .switch-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    padding: 1rem;
    height: 3.25rem;
    margin-left: 5rem;
    display: flex;
    align-items: center;
  }
</style>

<div id="filter">
  
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Swimming</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-sailboat"></i></div>
    <p>Boats</p>
  </div>
  <div class="switch-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
  <% for (let listing of listings) { %>
  <div class="col">
    <a
      href="/listings/<%= listing._id %>"
      class="text-decoration-none text-dark"
    >
      <div class="card h-100 listing-card">
        <img
          src="<%= listing.image || '/images/default.jpg' %>"
          class="card-img-top"
          alt="Listing Image"
          style="height: 20rem; object-fit: cover"
        />
        <div class="card-img-overlay text-white fw-bold">abcd</div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title || 'Untitled' %></b><br />
            &#8377;<%= (listing.price || 0).toLocaleString("en-IN") %>/Night
            <i class="tax-info">&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
  </div>
  <% } %>
</div>
<script>
  let taxSwitch = document.getElementById("switchCheckDefault")
  taxSwitch.addEventListener("click", function() {
    let taxInfo = document.getElementsByClassName("tax-info");
    for( tax of taxInfo){
      if(tax.style.display != "inline"){
        tax.style.display = "inline";
      }
      else{
        tax.style.display = "none";
      }
    }
  })
</script>