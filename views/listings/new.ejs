<% layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    <body>
      <br />
      <h3>Create new Listings</h3>
      <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label"></label>
          <input
            type="text"
            placeholder="Add Title"
            name="title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label"></label>
          <textarea
            type="text"
            placeholder="description"
            name="description"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Description should be short</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label"></label>
          <input
            type="file"
            name="image"
            class="form-control"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label"></label>
            <input
              type="number"
              placeholder="1200"
              name="price"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Price should be valid</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="location" class="form-label"></label>
            <input
              type="text"
              placeholder="Mumbai, Maharashtra"
              name="location"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Location should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label"></label>
          <input
            type="text"
            placeholder="India"
            name="country"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
        <br />
        <button class="btn btn-dark form-btn danger">Add</button>
        <br /><br />
      </form>
    </body>
  </div>
</div>
<script src="/js/script.js"></script>